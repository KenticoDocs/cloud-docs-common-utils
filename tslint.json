		"include": [
			"./shared/utils.test.ts",
			"./kcd-publisher-timer/*.ts",
			"./kcd-publisher-trigger/*.ts"
		]
	},
	"jsRules": {},
	"rules": {
		"no-var-requires": false,
		"no-string-throw": false,
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			false
		]
	},
	"rulesDirectory": []
}